<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!-- Simulate QR pattern with black squares -->
    <item android:top="20dp" android:left="20dp" android:right="160dp" android:bottom="160dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>

    <item android:top="20dp" android:left="160dp" android:right="20dp" android:bottom="160dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>

    <item android:top="160dp" android:left="20dp" android:right="160dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>

    <!-- Center pattern -->
    <item android:top="80dp" android:left="80dp" android:right="80dp" android:bottom="80dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>

    <!-- Add some random dots -->
    <item android:top="40dp" android:left="40dp" android:right="150dp" android:bottom="150dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>

    <item android:top="40dp" android:left="120dp" android:right="70dp" android:bottom="150dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>

    <item android:top="100dp" android:left="40dp" android:right="150dp" android:bottom="90dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>

</layer-list>
